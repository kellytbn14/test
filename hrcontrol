private Object convert(String raw) {
    if ("true".equalsIgnoreCase(raw)) return true;
    if ("false".equalsIgnoreCase(raw)) return false;
    if (raw.matches("-?\\d+")) return Integer.parseInt(raw);
    return raw;
}


















